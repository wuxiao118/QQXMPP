<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/ivMsgPhoneListItemIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ibl" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvMsgPhoneListItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="杨力" />

                <TextView
                    android:id="@+id/tvMsgPhoneListItemContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[视频] 2015-05-12"
                    android:textColor="@color/setting_dark_text_color" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivMsgPhoneListItemRightIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/chat_add_camera_normal" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/devide_line" />
    </LinearLayout>

</LinearLayout><!-- From: file:/G:/android/androidstudioprojects/QQXMPP/app/src/main/res/layout/msg_phone_list_item.xml -->