                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/chat_add_normal" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
